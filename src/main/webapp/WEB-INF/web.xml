<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--    creat-->
    <servlet>
        <servlet-name>CreateFoodServlet</servlet-name>
        <servlet-class>controller.CreateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateFoodServlet</servlet-name>
        <url-pattern>/food/create</url-pattern>
    </servlet-mapping>
    <!--    Update-->
    <servlet>
        <servlet-name>UpdateFoodServlet</servlet-name>
        <servlet-class>controller.UpdateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateFoodServlet</servlet-name>
        <url-pattern>/food/update</url-pattern>
    </servlet-mapping>
    <!--    Delete-->
    <servlet>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <servlet-class>controller.DeleteFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <url-pattern>/food/delete</url-pattern>
    </servlet-mapping>
    <!--    list-->
    <servlet>
        <servlet-name>ListFoodServlet</servlet-name>
        <servlet-class>controller.ListFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListFoodServlet</servlet-name>
        <url-pattern></url-pattern>
<!--        <url-pattern>/*</url-pattern>-->
<!--        <url-pattern>/*/*</url-pattern>-->
    </servlet-mapping>
    <!--detail-->
    <servlet>
        <servlet-name>ShowFoodServlet</servlet-name>
        <servlet-class>controller.ShowFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowFoodServlet</servlet-name>
        <url-pattern>/food/detail</url-pattern>
    </servlet-mapping>
<!--    list category-->
    <servlet>
        <servlet-name>ListCategoryServlet</servlet-name>
        <servlet-class>controller.ListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategoryServlet</servlet-name>
        <url-pattern>/category/list</url-pattern>
    </servlet-mapping>
</web-app>